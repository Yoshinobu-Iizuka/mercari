            %option{value: "10"} クロネコヤマト
            %option{value: "11"} ゆうパック
            %option{value: "13"} クリックポスト
            %option{value: "7"} ゆうパケット
          %i.fas.fa-chevron-down.sale-content-option__selectform-img
        .sale-content-option__right-brand
