            %option{value: "11"} 埼玉県
            %option{value: "12"} 千葉県
            %option{value: "13"} 東京都
            %option{value: "14"} 神奈川県
            %option{value: "15"} 新潟県
            %option{value: "16"} 富山県
            %option{value: "17"} 石川県
            %option{value: "18"} 福井県
            %option{value: "19"} 山梨県
            %option{value: "20"} 長野県
            %option{value: "21"} 岐阜県
            %option{value: "22"} 静岡県
            %option{value: "23"} 愛知県
            %option{value: "24"} 三重県
            %option{value: "25"} 滋賀県
            %option{value: "26"} 京都府
            %option{value: "27"} 大阪府
            %option{value: "28"} 兵庫県
