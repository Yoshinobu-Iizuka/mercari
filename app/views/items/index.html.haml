= render partial: "layouts/header"
/ カルーセル
%div
  .single-slider-item
    %div
      = link_to '#' do
        = image_tag('banner-hajimeru-fortune.jpg', alt: 'mercari')
    %div
      = link_to '#' do
        = image_tag('banner-featured-hobby.jpg', alt: 'mercari')
    .top-banner.bg-image-room
      .top-banner--inner.container
        .left
          %h2
            スマホでかんたん
            %br>/
            フリマアプリ
          %p
            メルカリはスマホカメラからすぐに出品できる
            %br>/
            購入時も安心な独自システムのアプリです
          .app-link
            = link_to '#' do
              = image_tag('app-store.svg', alt: 'appstore')
            = link_to '#' do
              = image_tag('google-play.svg', alt: 'googleplay')
        .right
          = image_tag('main_content_pc.png')
    %div
      = link_to '#' do
        = image_tag('banner-bokurano-heisei-entertainment.png', alt: 'mercari')
    %div
      = link_to '#' do
        = image_tag('banner-bokurano-heisei.jpg', alt: 'mercari')
  .top-image-sp
    = image_tag('banner-hajimeru-fortune.jpg', alt: 'mercari')
