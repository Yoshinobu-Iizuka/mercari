  %section.top-items.container
    / 繰り返し
    %h3= link_to 'レディース 新着アイテム', "#"
    .item-line
      - @ladies.each do |lady|
        = link_to '#' do
          .items-box
            %figure.items-box--image
              = image_tag(lady.images[0].name, alt: '商品タイトル商品タイトル商品タイトル')
            .item--caption
              %h4
                = lady.name
              %div
                %p.price
                  = "¥ #{lady.price}"
                %p.like
                  %i.far.fa-heart.like-icon
                  1
                %p (税込)
    %p.link-to-all
      = link_to 'すべての商品を見る', "#"
