      <%= form_for(resource, class: 'user-confirm-form', as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group user-confirm-form--column">
          <%= f.label :nickname do %>
            <span class="require">ニックネーム</span>
          <% end %>
          <%= f.text_field :nickname, autofocus: true, placeholder: 'メルカリ太郎', maxlength: "20" %>
        </div>
        <div class="form-group user-confirm-form--column">
          <%= f.label :email do %>
            <span class="require">メールアドレス</span>
          <% end %>
          <%= f.email_field :email, autocomplete: 'off', autofocus: true, placeholder: 'PC・携帯どちらでも可' %>
        </div>
        <div class="form-group user-confirm-form--column">
          <%= f.label :password do %>
            <span class="require">パスワード</span>
          <% end %>
          <%= f.password_field :password, autocomplete: 'off', autofocus: true, placeholder: '6文字以上', minlength: "6" %>
        </div>
        <div class="form-group user-confirm-form--column">
          <%= f.label :password do %>
            <span class="require">パスワード(確認)</span>
          <% end %>
          <%= f.password_field :password_confirmation, autocomplete: 'off', autofocus: true, placeholder: '6文字以上', minlength: "6" %>
        </div>
        <div class="form-group user-confirm-form--column">
          <label>
            <span>本人確認</span>
